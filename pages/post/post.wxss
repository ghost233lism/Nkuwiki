/* ================= 变量定义 ================= */
:root {
  --setting-primary: #5853e2;
  --setting-secondary: #6369e8;
}

/* ================= 基础布局 ================= */
.post-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 30rpx;
}

/* ================= 表单区域 ================= */
.post-form {
  padding: 20rpx 20rpx 10rpx;
  background-color: #fff;
  margin-top: 140rpx;
  border-radius: 12rpx 12rpx 0 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.post-title {
  font-size: 32rpx;
  border-bottom: 1px solid #eee;
  padding: 24rpx 0;
  width: 100%;
}

/* ================= 话题标签系统 ================= */
.topic-section {
  background-color: #fff;
  padding: 0rpx 0 0rpx;
  margin-top: 0;
  border-radius: 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  padding: 0 30rpx;
  margin-bottom: 15rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
  margin-top: 0;
  gap: 20rpx;
}

.tag-item,
.tag-add-btn {
  font-size: 28rpx;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
}

.tag-item {
  color: #333;
  background-color: #f5f5f5;
}

.tag-item.active {
  background-color: #f0f0ff;
  border-color: var(--setting-primary);
}

.tag-input-container {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  background-color: #f8f8f8;
}

.tag-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  background: #fff;
  border-radius: 8rpx;
}

.tag-confirm-btn {
  margin-left: 20rpx;
  padding: 10rpx 30rpx;
  background: var(--setting-primary);
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* ================= 联系方式区域 ================= */
.contact-container {
  background-color: #fff;
  margin: 0 10rpx 24rpx;
  border-radius: 0 0 12rpx 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  padding: 24rpx;
  margin-top: -1px;
}

.contact-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.contact-title {
  font-size: 28rpx;
  color: #666;
}

.auto-fill-btn {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #07c160;
}

.auto-fill-btn text {
  margin-left: 8rpx;
}

.contact-column {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.contact-item {
  width: 100%;
  display: flex;
  align-items: center;
}

.contact-label {
  font-size: 28rpx;
  color: #333;
  min-width: 120rpx;
}

.contact-input {
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
  box-sizing: border-box;
  flex: 1;
}

/* ================= 设置区域 ================= */
.post-settings {
  background: #fff;
  border-radius: 12rpx;
  margin: 24rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.setting-options {
  background: #fff;
  border-radius: 12rpx 12rpx 0 0;
  margin: 0 10rpx 0;
  box-shadow: none;
  border-bottom: none;
}

.settings-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.setting-group,
.setting-options {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
}

.setting-btn,
.setting-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 40rpx;
  transition: all 0.2s;
  background: #f8f8f8;
}

[class*="setting-"].active {
  background: #f0f0ff !important;
  border: 1px solid var(--setting-primary) !important;
  color: var(--setting-primary);
}

.setting-text {
  font-size: 28rpx;
  color: #333;
}

/* ================= 加载状态 ================= */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* ================= 第三方组件覆盖 ================= */
.weui-cells {
  margin: 0;
  border-radius: 12rpx;
  overflow: hidden;
}

.weui-cell {
  padding: 24rpx 30rpx !important;
  position: relative;
}

.weui-cell_switch .weui-cell__ft switch {
  transform: scale(0.9);
  margin-right: -5rpx;
}

/* 在设置区域添加发布按钮专属样式 */
button.setting-option {
  background: var(--setting-primary) !important;
  color: #fff !important;
  font-weight: 500;
  min-width: 160rpx;
  box-shadow: 0 4rpx 16rpx rgba(88,83,226,0.3);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

button.setting-option[type="primary"] {
  background: var(--setting-primary) !important;
}

button.setting-option[disabled] {
  background: #cccccc !important;
  color: #999999 !important;
  box-shadow: none;
  opacity: 0.7;
}

button.setting-option:not([disabled]){
  background:#07c160 !important;
  color:rgb(226, 225, 225) !important;
  box-shadow: none;
  opacity: 0.7;
}





