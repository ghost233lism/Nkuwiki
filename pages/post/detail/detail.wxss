/* 全局容器 */
.container {
  background-color: #f8f9fa;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  position: relative;
}

/* 顶部标题栏 */
.header {
  padding: env(safe-area-inset-top) 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(10px);
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-shadow: 0 1px 2px rgba(0,0,0,0.05);
  height: calc(88rpx + env(safe-area-inset-top));
  transition: all 0.3s ease;
}

/* 返回图标容器 */
.back-icon {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 36rpx;
  background: rgba(0,0,0,0.02);
  transition: all 0.2s ease;
}

.back-icon:active {
  background: rgba(0,0,0,0.05);
  transform: scale(0.95);
}

.back-icon image {
  width: 40rpx;
  height: 40rpx;
}

/* 标题容器 */
.title-container {
  position: absolute;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

/* 帖子容器 */
.post-container {
  background: #fff;
  margin: 0 0 24rpx;
  padding: 0;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 0 30rpx;
}

/* 评论区标题 */
.comment-header-section {
  padding: 30rpx 20rpx 0;
  border-top: 12rpx solid #f5f5f5;
  margin-top: 20rpx;
}

.comment-header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 作者信息 */
.post-header {
  padding: 32rpx;
  border-bottom: 1px solid rgba(0,0,0,0.03);
}

.author-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: #f5f5f5;
  border: 1px solid rgba(0,0,0,0.03);
}

.author-container {
  flex: 1;
}

.author-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

/* 帖子内容 */
.post-content {
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.post-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.post-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  margin-bottom: 32rpx;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 图片网格 */
.post-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10rpx;
  margin-top: 20rpx;
}

/* 单张图片时 */
.post-images.single-image {
  display: block;
  max-width: 100%;
}

.post-images.single-image image {
  width: 100%;
  max-height: 400rpx;
  object-fit: cover;
  border-radius: 12rpx;
}

/* 两张图片时 */
.post-images.double-image {
  grid-template-columns: repeat(2, 1fr);
}

/* 多张图片 */
.post-images image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  object-fit: cover;
  background-color: #f6f6f6;
}

/* 交互栏 */
.interaction-bar {
  display: flex;
  justify-content: flex-end;
  gap: 40rpx;
  padding: 24rpx 32rpx;
  border-top: 1px solid rgba(0,0,0,0.03);
  background: #fff;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  border-radius: 32rpx;
  background: rgba(0,0,0,0.02);
  transition: all 0.2s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: rgba(0,0,0,0.05);
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.action-item text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 点赞和收藏激活状态 */
