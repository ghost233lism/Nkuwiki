.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f9fa;
  color: #333;
}

.content-area {
  flex: 1;
  padding: 24rpx;
  margin-top: 50rpx;
  transition: opacity 0.3s ease-in-out;
}

.content-loading {
  opacity: 0.6;
}

.bottom-space {
  height: 40rpx;
}

/* 用户卡片包装器 */
.user-profile-wrapper {
  animation: fadeIn 0.5s ease-out;
}

/* 用户个人资料 */
.user-profile {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  margin-bottom: 24rpx;
  transform: translateY(0);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.user-profile:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 用户头部区域 */
.user-header {
  padding: 40rpx 32rpx;
  display: flex;
  background: linear-gradient(135deg, #f0f4ff, #ffffff);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.03);
  position: relative;
}

.user-header:after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 6rpx;
  background: linear-gradient(to right, #6369e8, #8c90ff);
  opacity: 0.5;
}

.avatar-container {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f0f2f5;
  margin-right: 32rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
  border: 4rpx solid #fff;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar-hover {
  transform: scale(1.05);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.avatar-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.default-avatar {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  font-weight: bold;
  color: #6369e8;
  background-color: #e8ebff;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #333;
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.8);
}

.user-bio {
  font-size: 28rpx;
  line-height: 1.5;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.action-buttons {
  margin-top: 16rpx;
}

.edit-btn, .follow-btn {
  min-width: 140rpx;
  height: 68rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  background-color: #6369e8;
  color: white;
  border-radius: 34rpx;
  box-shadow: 0 4rpx 12rpx rgba(99, 105, 232, 0.25);
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.follow-icon {
  font-size: 30rpx;
  font-weight: 700;
  margin-right: 6rpx;
  line-height: 1;
}

.button-hover {
  opacity: 0.9;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(99, 105, 232, 0.15);
}

.follow-btn.followed {
  background-color: #f5f5f7;
  color: #555;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 用户统计数据 */
.user-stats {
  display: flex;
  padding: 28rpx 0;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.03);
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  position: relative;
  transition: background-color 0.2s ease, transform 0.2s ease;
}

.stat-hover {
  background-color: rgba(99, 105, 232, 0.05);
  transform: translateY(-2rpx);
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 20%;
  height: 60%;
  width: 1rpx;
  background-color: rgba(0, 0, 0, 0.05);
}

.stat-value {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
  transition: color 0.2s ease;
}

.stat-hover .stat-value {
  color: #6369e8;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

/* 详情卡片 */
.detail-card {
  background-color: #fff;
  border-radius: 16rpx; 
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 24rpx;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 14rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.card-title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 28rpx;
  background-color: #6369e8;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

/* 信息网格布局 */
.info-grid {
  display: flex;
  flex-direction: column;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1.5;
  padding: 12rpx 0;
  border-radius: 8rpx;
  transition: background-color 0.2s ease;
}

.detail-item:hover {
  background-color: rgba(0, 0, 0, 0.01);
}

.detail-item:last-child {
  margin-bottom: 0;
}

.item-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #888;
  flex-shrink: 0;
}

.item-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  font-weight: 500;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}