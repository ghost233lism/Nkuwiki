/* pages/notifications/notifications.wxss */
.notifications-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 标签页样式 */
.tabs-container {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #5E6BF7;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  width: 40%;
  height: 6rpx;
  background-color: #5E6BF7;
  border-radius: 3rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 通知列表 */
.notifications-list {
  flex: 1;
  background-color: #f8f8f8;
}

.notification-item {
  display: flex;
  padding: 24rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.notification-item.unread {
  background-color: #f0f5ff;
}

/* 左侧图标 */
.notification-icon {
  margin-right: 24rpx;
}

.icon-bg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #5E6BF7;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-bg.like {
  background-color: #5E6BF7;
}

.icon-bg.comment {
  background-color: #5E6BF7;
}

.icon-bg.follow {
  background-color: #5E6BF7;
}

.icon-bg.system {
  background-color: #FF9500;
}

.icon {
  width: 40rpx;
  height: 40rpx;
}

/* 通知内容 */
.notification-content {
  flex: 1;
  overflow: hidden;
}

.notification-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.notification-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.notification-meta {
  font-size: 24rpx;
  color: #999;
}

/* 右侧时间和状态 */
.notification-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 100rpx;
  margin-left: 20rpx;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.notification-status {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #FF3B30;
}

/* 加载更多和底部提示 */
.loading-more, .list-bottom {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 底部操作区 */
.bottom-action {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.mark-all-read-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #5E6BF7;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.mark-all-read-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

/* 刷新按钮样式 */
.refresh-btn {
  margin: 10px 15px;
  padding: 8px 15px;
  background-color: #07c160;
  color: white;
  text-align: center;
  border-radius: 4px;
  font-size: 14px;
} 