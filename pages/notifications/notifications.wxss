/* pages/notifications/notifications.wxss */
.notifications-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f6f6;
}

/* 页面标题栏 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  flex: 1;
}

.back-icon, .more-icon {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 标签导航栏 */
.tabs-container {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 88rpx;
  z-index: 99;
}

.tab {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #4a6cef;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #4a6cef;
  border-radius: 3rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 160rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.loading {
  display: flex;
  align-items: center;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 通知列表 */
.notifications-list {
  flex: 1;
  padding-bottom: 120rpx; /* 为底部按钮预留空间 */
}

.notification-item {
  display: flex;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 2rpx;
  position: relative;
}

/* 未读通知样式 */
.notification-item.unread {
  background-color: #f0f5ff;
}

/* 通知左侧图标 */
.notification-icon {
  margin-right: 24rpx;
}

.icon-bg {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: #4a6cef;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon {
  width: 36rpx;
  height: 36rpx;
  filter: brightness(0) invert(1); /* 将图标变为白色 */
}

/* 通知内容区 */
.notification-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.notification-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.notification-meta {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 通知右侧 */
.notification-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
  margin-left: 20rpx;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.notification-status {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #fb5858;
}

/* 底部操作区 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.mark-all-read-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #4a6cef;
  color: #fff;
  font-size: 28rpx;
}

.mark-all-read-btn[disabled] {
  background-color: #cccccc;
  color: #fff;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  filter: brightness(0) invert(1);
}

/* 加载更多和到底提示 */
.loading-more, .list-bottom {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 刷新按钮样式 */
.refresh-btn {
  margin: 10px 15px;
  padding: 8px 15px;
  background-color: #07c160;
  color: white;
  text-align: center;
  border-radius: 4px;
  font-size: 14px;
} 