/* pages/profile/profile.wxss */
.profile-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部用户信息区域 */
.user-header {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 未登录状态 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #f0f0f0;
  margin-bottom: 20rpx;
}

.login-text {
  font-size: 28rpx;
  color: #888888;
  margin-bottom: 30rpx;
}

.login-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4caf50;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 40rpx;
  text-align: center;
}

/* 已登录状态 */
.user-info {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
}

.info-container {
  flex: 1;
  position: relative;
}

.username {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.user-status {
  font-size: 26rpx;
  color: #888888;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  max-width: 450rpx;
}

.edit-btn {
  position: absolute;
  right: 0;
  top: 0;
  padding: 10rpx 25rpx;
  background-color: #f5f5f5;
  color: #666666;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: 1rpx solid #e0e0e0;
}

/* 统计数据 */
.stats-container {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid #eeeeee;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.stat-label {
  font-size: 24rpx;
  color: #888888;
  margin-top: 5rpx;
}

/* 功能列表区域 */
.function-list {
  flex: 1;
  padding: 0 20rpx;
}

.function-group {
  background-color: #ffffff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.function-title {
  font-size: 26rpx;
  color: #888888;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  position: relative;
}

.function-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.function-icon {
  width: 42rpx;
  height: 42rpx;
  margin-right: 25rpx;
}

.function-name {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}