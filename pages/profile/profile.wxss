/* pages/profile/profile.wxss */
.profile-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 24rpx 20rpx;
  background-color: #fff;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.setting-icon {
  width: 44rpx;
  height: 44rpx;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #fff;
  padding: 20rpx 24rpx 30rpx;
  margin-bottom: 20rpx;
}

/* 未登录状态 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
}

.login-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.login-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4080ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 已登录用户信息 */
.user-info {
  display: flex;
  position: relative;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
  background-color: #f0f0f0;
}

.user-details {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.username {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.school {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.bio {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.edit-profile-btn {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  color: #4080ff;
  background-color: rgba(64, 128, 255, 0.1);
  border-radius: 30rpx;
  padding: 10rpx 24rpx;
  line-height: 1.2;
  min-height: auto;
  border: none;
}

/* 数据统计行 */
.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 功能图标区域 */
.feature-icons {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  padding: 20rpx 0;
}

.icon-circle {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  background-color: rgba(64, 128, 255, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
}

.feature-icon {
  width: 50rpx;
  height: 50rpx;
}

.icon-text {
  font-size: 26rpx;
  color: #666;
}

/* 设置菜单区域 */
.settings-menu {
  background-color: #fff;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}