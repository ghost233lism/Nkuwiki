/* 页面容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

/* 页面标题 */
.page-header {
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  color: #888;
}

/* 表单样式 */
.feedback-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

/* 单选按钮组样式 */
.radio-group {
  display: flex;
  flex-wrap: wrap;
}

.radio-item {
  display: flex;
  align-items: center;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}

.radio-item text {
  font-size: 28rpx;
  margin-left: 8rpx;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 设备信息 */
.device-info {
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
  text-align: right;
}

.info-label {
  color: #999;
}

.info-text {
  color: #666;
}

/* 自定义button样式 */
.submit-button {
  width: 90% !important;
  height: 88rpx !important;
  margin: 60rpx auto !important;
  font-size: 32rpx !important;
  border-radius: 44rpx !important;
  background-color: #07c160 !important;
  color: #ffffff !important;
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  font-weight: 500 !important;
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.2) !important;
}

/* 按钮悬停状态 */
.submit-button.button-hover {
  background-color: #06ad56 !important;
  opacity: 0.9;
}