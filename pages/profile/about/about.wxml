<view class="about-container">
  <!-- 页面标题 -->
  <view class="page-header">
    <text class="page-title">关于我们</text>
  </view>
  
  <!-- 加载状态 -->
  <view class="loading-container" wx:if="{{loading}}">
    <view class="loading">
      <image class="loading-icon" src="/assets/icons/loading.png" mode="aspectFill"></image>
      <text class="loading-text">加载中...</text>
    </view>
  </view>
  
  <!-- 标签页切换 -->
  <view class="tab-container">
    <view class="tab {{activeTab === 'info' ? 'active' : ''}}" bindtap="switchTab" data-tab="info">平台信息</view>
    <view class="tab {{activeTab === 'versions' ? 'active' : ''}}" bindtap="switchTab" data-tab="versions">版本历史</view>
    <view class="tab {{activeTab === 'agreement' ? 'active' : ''}}" bindtap="switchTab" data-tab="agreement">用户协议</view>
    <view class="tab {{activeTab === 'privacy' ? 'active' : ''}}" bindtap="switchTab" data-tab="privacy">隐私政策</view>
  </view>
  
  <!-- 内容区域 -->
  <view class="content-container">
    <!-- 平台信息页 -->
    <view class="content-section" wx:if="{{activeTab === 'info' && platformInfo}}">
      <view class="platform-header">
        <image class="platform-logo" src="{{platformInfo.team[0].avatar || '/assets/icons/logo.png'}}" mode="aspectFill"></image>
        <view class="platform-title">{{platformInfo.name}}</view>
        <view class="platform-version">v{{platformInfo.version}}</view>
      </view>
      
      <view class="platform-desc">{{platformInfo.description}}</view>
      
      <view class="platform-slogan">{{platformInfo.slogan}}</view>
      
      <view class="divider"></view>
      
      <view class="section-title">功能特性</view>
      <view class="features-list">
        <view class="feature-item" wx:for="{{platformInfo.features}}" wx:key="name">
          <view class="feature-title">{{item.name}}</view>
          <view class="feature-desc">{{item.description}}</view>
        </view>
      </view>
      
      <view class="divider"></view>
      
      <view class="section-title">团队成员</view>
      <view class="team-list">
        <view class="team-item" wx:for="{{platformInfo.team}}" wx:key="name" bindtap="viewTeamMember" data-index="{{index}}">
          <image class="team-avatar" src="{{item.avatar || '/assets/icons/default-avatar.png'}}" mode="aspectFill"></image>
          <view class="team-info">
            <view class="team-name">{{item.name}}</view>
            <view class="team-role">{{item.role}}</view>
          </view>
        </view>
      </view>
      
      <view class="divider"></view>
      
      <view class="section-title">联系我们</view>
      <view class="contact-list">
        <view class="contact-item" wx:if="{{platformInfo.email}}" bindtap="copyContact" data-type="email">
          <image class="contact-icon" src="/assets/icons/email.png" mode="aspectFill"></image>
          <view class="contact-info">{{platformInfo.email}}</view>
          <view class="copy-hint">点击复制</view>
        </view>
        
        <view class="contact-item" wx:if="{{platformInfo.wechat}}" bindtap="copyContact" data-type="wechat">
          <image class="contact-icon" src="/assets/icons/wechat.png" mode="aspectFill"></image>
          <view class="contact-info">{{platformInfo.wechat}}</view>
          <view class="copy-hint">点击复制</view>
        </view>
        
        <view class="contact-item" wx:if="{{platformInfo.github}}" bindtap="copyContact" data-type="github">
          <image class="contact-icon" src="/assets/icons/github.png" mode="aspectFill"></image>
          <view class="contact-info">{{platformInfo.github}}</view>
          <view class="copy-hint">点击复制</view>
        </view>
        
        <view class="contact-item" wx:if="{{platformInfo.website}}">
          <image class="contact-icon" src="/assets/icons/website.png" mode="aspectFill"></image>
          <view class="contact-info">{{platformInfo.website}}</view>
        </view>
      </view>
    </view>
    
    <!-- 版本历史页 -->
    <view class="content-section" wx:if="{{activeTab === 'versions'}}">
      <view class="section-title">版本更新历史</view>
      <view class="versions-list">
        <view class="version-item" wx:for="{{versions}}" wx:key="version">
          <view class="version-header">
            <view class="version-number">v{{item.version}}</view>
            <view class="version-date">{{item.date}}</view>
          </view>
          <view class="version-title">{{item.title}}</view>
          <view class="version-desc">{{item.description}}</view>
          <view class="changes-list">
            <view class="change-item" wx:for="{{item.changes}}" wx:for-item="change" wx:key="*this">
              • {{change}}
            </view>
          </view>
        </view>
      </view>
    </view>
    
    <!-- 用户协议页 -->
    <view class="content-section" wx:if="{{activeTab === 'agreement'}}">
      <block wx:if="{{!agreement.content}}">
        <view class="loading">
          <image class="loading-icon" src="/assets/icons/loading.png" mode="aspectFill"></image>
          <text class="loading-text">加载中...</text>
        </view>
      </block>
      <block wx:else>
        <view class="agreement-title">{{agreement.title}}</view>
        <rich-text nodes="{{agreement.content}}"></rich-text>
      </block>
    </view>
    
    <!-- 隐私政策页 -->
    <view class="content-section" wx:if="{{activeTab === 'privacy'}}">
      <block wx:if="{{!privacy.content}}">
        <view class="loading">
          <image class="loading-icon" src="/assets/icons/loading.png" mode="aspectFill"></image>
          <text class="loading-text">加载中...</text>
        </view>
      </block>
      <block wx:else>
        <view class="agreement-title">{{privacy.title}}</view>
        <rich-text nodes="{{privacy.content}}"></rich-text>
      </block>
    </view>
  </view>
  
  <!-- 底部版权信息 -->
  <view class="footer">
    <text class="copyright">© {{platformInfo ? platformInfo.name : '南开知识共享平台'}} {{platformInfo ? platformInfo.website : ''}}</text>
  </view>
</view>