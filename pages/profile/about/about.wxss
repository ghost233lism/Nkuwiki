.container {
  padding: 0;
  background: #fff;
  min-height: 100vh;
}

.about-card {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  padding: 60rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.version {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.info-list {
  padding: 40rpx 0;
}

.info-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.content {
  font-size: 36rpx;
  color: #333;
  line-height: 1.6;
}

.copyright {
  position: relative;
  margin-top: 60rpx;
  padding: 40rpx 0;
}

.copyright text {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 2;
}

.about-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f8f8f8;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 标签页 */
.tab-container {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tab {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #007AFF;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  background-color: #007AFF;
  border-radius: 4rpx;
}

/* 内容区域 */
.content-container {
  flex: 1;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.content-section {
  min-height: 50vh;
}

/* 平台信息部分 */
.platform-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
}

.platform-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}

.platform-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.platform-version {
  font-size: 24rpx;
  color: #999;
}

.platform-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin: 20rpx 0;
  line-height: 1.6;
}

.platform-slogan {
  font-size: 28rpx;
  color: #007AFF;
  text-align: center;
  margin: 20rpx 0;
  line-height: 1.6;
  font-weight: bold;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 30rpx 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #007AFF;
}

/* 功能特性列表 */
.features-list {
  margin-bottom: 30rpx;
}

.feature-item {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.feature-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 团队成员列表 */
.team-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.team-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.team-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 10rpx;
}

.team-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
  text-align: center;
}

.team-role {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 联系方式列表 */
.contact-list {
  margin-bottom: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.contact-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.copy-hint {
  font-size: 24rpx;
  color: #007AFF;
  padding: 10rpx 20rpx;
  border: 1rpx solid #007AFF;
  border-radius: 30rpx;
}

/* 版本历史部分 */
.versions-list {
  margin-bottom: 30rpx;
}

.version-item {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.version-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.version-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #007AFF;
}

.version-date {
  font-size: 24rpx;
  color: #999;
}

.version-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.version-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.changes-list {
  margin-top: 10rpx;
}

.change-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  padding-left: 10rpx;
}

/* 协议内容样式 */
.agreement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin: 20rpx 0 30rpx;
}

/* 底部版权 */
.footer {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
} 