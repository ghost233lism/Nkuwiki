.container {
  padding: 0;
  background: #fff;
  min-height: 100vh;
}

.about-card {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  padding: 60rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.version {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.info-list {
  padding: 40rpx 0;
}

.info-item {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.content {
  font-size: 36rpx;
  color: #333;
  line-height: 1.6;
}

.copyright {
  margin-top: 80rpx;
  padding-top: 40rpx;
  border-top: 1rpx solid #eee;
  text-align: center;
}

.copyright text {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 2;
}

.about-container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.version {
  font-size: 28rpx;
  color: #666;
}

.company-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.content {
  font-size: 32rpx;
  color: #333;
  display: block;
}

.copyright {
  text-align: center;
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
}

.copyright text {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
} 