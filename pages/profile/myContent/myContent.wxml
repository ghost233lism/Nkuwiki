<!-- 顶部标题栏和标签栏 -->
<!-- 导航栏 -->
<nav-bar
    title="我的内容"
    show-back="{{true}}"
/>
  
<!-- 标签栏 -->
<tab-bar 
  tabs="{{tabTitles}}" 
  activeTab="{{tabIndex}}" 
  bind:change="switchTab"
  equalWidth="{{true}}"
  fixed="{{true}}"
/>
<view class="container">
  <!-- 内容区域 -->
  <view class="content-area">
    <!-- 我的帖子 -->
    <post-list
      wx:if="{{tabIndex === 0}}"
      filter="{{postFilter}}"
      empty-text="您还没有发布任何帖子"
      bind:postTap="onPostTap"
    ></post-list>

    <!-- 我的获赞 -->
    <post-list
      wx:if="{{tabIndex === 1}}"
      filter="{{likeFilter}}"
      empty-text="您还没有获得任何点赞"
      bind:postTap="onPostTap"
    ></post-list>

    <!-- 我的收藏 -->
    <post-list
      wx:if="{{tabIndex === 2}}"
      filter="{{favoriteFilter}}"
      empty-text="您还没有收藏任何帖子"
      bind:postTap="onPostTap"
    ></post-list>

    <!-- 我的关注 -->
    <user-list
      wx:if="{{tabIndex === 3}}"
      filter="{{followingFilter}}"
      empty-text="您还没有关注任何用户"
    ></user-list>

    <!-- 我的粉丝 -->
    <user-list
      wx:if="{{tabIndex === 4}}"
      filter="{{followerFilter}}"
      empty-text="您还没有任何粉丝"
    ></user-list>

    <!-- 我的评论 -->
    <comment-list
      wx:if="{{tabIndex === 5}}"
      filter="{{commentFilter}}"
      empty-text="您还没有评论任何帖子"
      bind:commentTap="onCommentTap"
    ></comment-list>
  </view>
</view>

<!-- 只在我的帖子页显示发帖按钮 -->
<floating-button
  wx:if="{{tabIndex === 0}}"
  icon="add"
  text="发帖"
  bind:tap="onNewPost"
/> 