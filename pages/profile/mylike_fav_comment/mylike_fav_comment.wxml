<page-status loading="{{loading}}" error="{{error}}" retry-text="重试">
  <!-- 顶部标题栏和标签栏 -->
  <nav-tab-bar
    title="{{pageTitle}}"
    show-back="{{true}}"
    tab-titles="{{tabTitles}}"
    active-tab="{{tabIndex}}"
    bind:change="switchTab"
  />

  <view class="page-position"></view>

  <!-- 内容区域 -->
  <view class="content-area">
    <!-- 帖子列表 -->
    <post-list
      posts="{{posts}}"
      loading="{{loading}}"
      error="{{error}}"
      errorMsg="{{errorMsg}}"
      hasMore="{{hasMore}}"
      empty="{{posts.length === 0}}"
      emptyText="{{emptyText}}"
      emptyBtnText="去浏览帖子"
      showEmptyBtn="{{true}}"
      currentOpenid="{{openid}}"
      refreshing="{{refreshing}}"
      bind:postTap="onPostTap"
      bind:like="onLike"
      bind:favorite="onFavorite"
      bind:comment="onComment"
      bind:userTap="onUserTap"
      bind:loadMore="loadList"
      bind:emptyBtnTap="onIndexTap"
    />
  </view>
</page-status> 
