/* pages/profile/edit/edit.wxss */
page {
  background: #f8f8f8;
  min-height: 100vh;
}

.container {
  padding-bottom: 40rpx;
}

.content-area {
  padding: 0 20rpx;
  margin-top: 100rpx;
}

/* 头像编辑区域 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
}

.avatar-wrapper {
  background: none !important;
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 50% !important;
  overflow: hidden !important;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
}

.avatar-wrapper:after {
  border: none !important;
}

/* 旧的头像样式 - 保留以兼容 */
.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

/* 新的头像图标样式 */
.avatar-icon {
  width: 100% !important;
  height: 100% !important;
  border-radius: 50%;
  overflow: hidden;
}

.avatar-hint {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 按钮区域 */
.button-area {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.save-button {
  width: 100% !important;
  background: #07c160 !important;
  color: #fff !important;
}

/* 基本资料标题 */
.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin: 40rpx 0 20rpx 12rpx;
}

/* 新增自定义插槽样式 */
.custom-field {
  padding: 24rpx;
  background: #fff;
  margin: 20rpx 0;
  border-radius: 12rpx;
}

/* 手动表单样式 */
.manual-form {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.manual-group {
  margin-bottom: 30rpx;
}

.manual-group .group-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}

.manual-field {
  margin-bottom: 20rpx;
}

.field-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.field-input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}