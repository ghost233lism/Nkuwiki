/* pages/profile/edit/edit.wxss */
.edit-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  background-color: #ffffff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eeeeee;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
}

.form-container {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 头像选择区域 */
.avatar-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
  display: block;
}

.avatar-picker {
  display: flex;
  align-items: center;
}

.current-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
  margin-right: 30rpx;
}

.avatar-button {
  background-color: #f5f5f5;
  color: #666666;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  line-height: 1.2;
  border: 1rpx solid #e0e0e0;
  margin: 0;
}

.avatar-button::after {
  border: none;
}

/* 输入区域 */
.input-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.input-field {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
}

.input-textarea {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  width: 100%;
  height: 180rpx;
  box-sizing: border-box;
}

/* 底部按钮区域 */
.button-container {
  padding: 40rpx 20rpx;
}

.save-btn {
  background-color: #4caf50;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 40rpx;
  width: 100%;
  padding: 20rpx 0;
}

.save-btn::after {
  border: none;
}