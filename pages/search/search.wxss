/* 简化的搜索页面样式 */
page {
  background-color: #f8f8f8;
  min-height: 100vh;
}

.container {
  padding: 0 0 30rpx;
}

/* 搜索建议 */
.search-suggestions {
  background-color: #fff;
  border-radius: 8rpx;
  margin: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

.suggestion-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background-color: #f5f5f5;
}

.suggestion-item icon {
  margin-right: 16rpx;
  color: #999;
}

.suggestion-item text {
  font-size: 28rpx;
  color: #333;
}

/* 标题样式 */
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 24rpx 24rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.clear-btn {
  font-size: 24rpx;
  color: #666;
  font-weight: normal;
}

/* 热门搜索 */
.hot-searches {
  background-color: #fff;
  margin: 16rpx;
  border-radius: 8rpx;
  padding-bottom: 16rpx;
}

.hot-list {
  padding: 0 24rpx;
}

.hot-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.hot-item:last-child {
  border-bottom: none;
}

.hot-rank {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #eee;
  border-radius: 6rpx;
  margin-right: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.hot-rank.top {
  background-color: #ff6b6b;
  color: #fff;
}

.count {
  margin-left: auto;
  font-size: 24rpx;
  color: #999;
}

/* 搜索历史 */
.search-history {
  background-color: #fff;
  margin: 16rpx;
  border-radius: 8rpx;
  padding-bottom: 16rpx;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.history-item {
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

/* 搜索内容区 */
.search-content {
  background-color: #fff;
  margin: 16rpx;
  border-radius: 8rpx;
  padding: 16rpx;
}

/* 查询与回答 */
.query-info, .answer-box {
  margin-bottom: 20rpx;
}

.label {
  font-weight: bold;
  margin-right: 8rpx;
  color: #333;
}

/* 问题建议 */
.suggest-questions {
  margin-top: 16rpx;
}

.question-list {
  padding: 0 16rpx;
}

.question-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.question-item icon {
  margin-right: 12rpx;
  color: #666;
}

.question-item text {
  font-size: 26rpx;
  color: #333;
}

/* 结果摘要 */
.result-summary {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 0 16rpx;
}

/* 分页 */
.pagination {
  padding: 20rpx 0 10rpx;
  text-align: center;
}

.load-more {
  display: inline-block;
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  color: #1aad19;
  background-color: #f0f9f0;
  border-radius: 32rpx;
}

.no-more {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 加载中 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 无结果 */
.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.no-result icon {
  margin-bottom: 24rpx;
  color: #ddd;
}

.no-result text {
  font-size: 28rpx;
  color: #999;
}

.search-tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.search-tips icon {
  margin-bottom: 24rpx;
  color: #ddd;
}

.search-tips text {
  font-size: 28rpx;
  color: #999;
}
