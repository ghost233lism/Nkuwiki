/**app.wxss**/
/* 导入iconfont */
@font-face {
  font-family: 'iconfont';  /* Project id 2953625 */
  src: url('//at.alicdn.com/t/font_2953625_eawt9p9q1h.woff2?t=1638085751117') format('woff2'),
       url('//at.alicdn.com/t/font_2953625_eawt9p9q1h.woff?t=1638085751117') format('woff'),
       url('//at.alicdn.com/t/font_2953625_eawt9p9q1h.ttf?t=1638085751117') format('truetype');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 32rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-success:before {
  content: "\e73c";
}

.icon-error:before {
  content: "\e69e";
}

.icon-wechat:before {
  content: "\e6b5";
}

.icon-empty:before {
  content: "\e64d";
}

/* 全局样式优化 */
page {
  background-color: #f7f9fc;
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
  color: #333;
  box-sizing: border-box;
  --primary-color: #07c160;
  --danger-color: #ff5252;
  --success-color: #07c160;
  --warning-color: #ff9800;
  --info-color: #2196f3;
  --gray-color: #999;
  --light-gray: #f5f5f5;
  min-height: 100vh;
}

/* 合并文本溢出样式 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 优化边距辅助类（保留常用尺寸） */
.mt-20 { margin-top: 20rpx; }
.mb-20 { margin-bottom: 20rpx; }
.ml-10 { margin-left: 10rpx; }
.mr-10 { margin-right: 10rpx; }

/* 图标系统 */
.icon {
  display: inline-block;
  vertical-align: middle;
}

/* WEUI组件样式覆盖 */
/* 按钮 */
.weui-btn {
  margin-top: 30rpx !important;
  margin-bottom: 30rpx !important;
}

.weui-btn_primary {
  background-color: #07c160 !important;
}

/* 表单 */
.weui-form {
  padding: 0 !important;
  margin: 0 !important;
}

.weui-form__text-area {
  padding: 30rpx 30rpx 10rpx !important;
  margin: 0 !important;
}

.weui-form__title {
  font-size: 36rpx !important;
  font-weight: 500 !important;
}

.weui-form__control-area {
  margin: 0 !important;
}

.weui-cells {
  margin-top: 0 !important;
  background-color: #fff !important;
}

.weui-cell {
  padding: 20rpx 30rpx !important;
}

.weui-cell_active {
  background-color: #f8f8f8 !important;
}

.weui-cell__hd {
  font-size: 28rpx !important;
  color: #333 !important;
}

.weui-cell__bd {
  font-size: 28rpx !important;
  color: #333 !important;
}

/* 上传组件 */
.weui-uploader {
  width: 100% !important;
}

.weui-uploader__input-box {
  margin-right: 16rpx !important;
  margin-bottom: 16rpx !important;
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 8rpx !important;
}

.weui-uploader__file {
  margin-right: 16rpx !important;
  margin-bottom: 16rpx !important;
}

.weui-uploader__img {
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 8rpx !important;
}

