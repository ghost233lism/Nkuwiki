/* 文本域容器 */
.text-area-container {
  position: relative;
  width: 100%;
  margin-bottom: 0;
  background: #fff;
}

/* 文本域 */
.text-area {
  width: 100%;
  min-height: 80rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f8f8f8;
  font-size: 28rpx;
  color: #333;
  border-bottom: none;
}

/* 禁用状态 */
.text-area.disabled {
  opacity: 0.7;
  color: #999;
}

/* 占位符样式 */
.text-area-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 计数容器 */
.count-container {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  z-index: 10;
}

/* 计数文本 */
.count-text {
  font-size: 24rpx;
  color: #999;
}

/* 达到限制时的计数文本 */
.count-limit {
  color: #ff4d4f;
}

.markdown-editor {
  font-family: 'Courier New', Courier, monospace;
}

.markdown-preview,
.text-preview {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

/* 只读模式的预览区样式 */
.markdown-preview.read-only {
  padding: 0;
}

.markdown-content {
  width: 100%;
}

.markdown-content .h1 {
  font-size: 36rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  color: #333;
}

.markdown-content .h2 {
  font-size: 32rpx;
  font-weight: bold;
  margin: 26rpx 0 18rpx;
  color: #333;
}

.markdown-content .h3 {
  font-size: 30rpx;
  font-weight: bold;
  margin: 22rpx 0 16rpx;
  color: #333;
}

.markdown-content .p {
  margin: 16rpx 0;
  line-height: 1.6;
}

.markdown-content .a {
  color: #07c160;
  text-decoration: none;
}

.markdown-content .markdown-image {
  max-width: 100%;
  margin: 10rpx 0;
}

.markdown-content .code {
  font-family: monospace;
  background: #f8f8f8;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 26rpx;
  color: #e83e8c;
}

.markdown-content .pre-block {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  overflow-x: auto;
  margin: 20rpx 0;
}

.markdown-content .pre-block .code-block {
  background: none;
  padding: 0;
  color: #333;
}

.text-preview.read-only {
  padding: 0;
}

.empty-preview {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  min-height: 60rpx;
  padding: 10rpx 0;
}

.counter {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.toolbar {
  display: flex;
  padding: 15rpx 30rpx;
  border-top: 1rpx solid #eee;
  align-items: center;
  justify-content: flex-start;
  background-color: #ffffff;
  border-radius: 0 0 8rpx 8rpx;
  margin-top: 2rpx;
  margin-bottom: 0;
}

.tool-item {
  margin-right: 40rpx;
  padding: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-item.active {
  color: #07c160;
}

.tool-item.preview-only {
  margin-left: auto;
  margin-right: 0;
}

/* 工具栏图标样式 */
.tool-icon {
  font-size: 36rpx;
  font-weight: 500;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color:rgb(26, 25, 25);
}

.tool-icon-component {
  display: flex;
  align-items: center;
  justify-content: center;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 禁止滚动的样式 */
.no-scroll {
  overflow: hidden !important;
  -webkit-overflow-scrolling: auto !important;
}

.no-scroll-view {
  overflow: hidden;
  text-overflow: ellipsis;
  max-height: 100%;
}

.line-clamp {
  display: -webkit-box;
  -webkit-line-clamp: 4; /* 最多显示4行 */
  -webkit-box-orient: vertical;
}

.text-area-input {
  width: 100%;
  min-height: 40rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.weui-cells_form .weui-cell_disabled:active {
  background-color: transparent;
}

.weui-cells:before {
  border-top: none; /* 隐藏顶部边框 */
}

.weui-cells:after {
  border-bottom: none; /* 隐藏底部边框 */
}

/* 字数统计 */
.comment-counter {
  color: #888;
  font-size: 24rpx;
  text-align: right;
}

/* 溢出字数警告 */
.comment-counter-warn {
  color: #e64340;
}


.image-number {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 4rpx 0;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 0 0 8rpx;
}
