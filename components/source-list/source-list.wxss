/* source-list组件样式 */
.source-list {
  padding: 0;
  background-color: #ffffff;
  width: 100%;
}

.source-item {
  display: flex;
  padding: 16rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.source-item:last-child {
  border-bottom: none;
}

.source-item:active {
  background-color: #f9f9f9;
}

/* 左侧容器 */
.left-container {
  display: none;
}

/* 排名样式 */
.rank-num {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border-radius: 50%;
  color: #999;
  margin-right: 10rpx;
  flex-shrink: 0;
  font-weight: bold;
}

.top-rank {
  background-color: #1aad19;
  color: white;
  font-weight: bold;
}

.normal-rank {
  background-color: #f2f2f2;
  color: #666;
}

/* 平台图标 */
.platform-icon {
  display: none;
}

/* 内容区样式 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  min-width: 0; /* 确保flex子项可以正确缩小 */
}

/* 顶部信息栏样式 */
.top-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #888;
  margin-bottom: 12rpx;
}

/* 信息栏 */
.info-bar {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 24rpx;
  color: #888;
  width: 100%;
}

/* 左侧信息 */
.left-info {
  display: flex;
  flex-direction: column;
  max-width: 50%;
}

/* 右侧信息 */
.right-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  max-width: 50%;
}

/* 左侧来源标签 */
.source-tag {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  margin-bottom: 6rpx;
  max-width: 100%;
}

.source-name {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 160rpx;
}

.official-tag {
  margin-left: 8rpx;
  padding: 2rpx 8rpx;
  background-color: #ff6b6b;
  color: white;
  font-size: 20rpx;
  border-radius: 4rpx;
  flex-shrink: 0;
}

/* 右侧作者与时间 */
.author-time {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
  flex-shrink: 0;
  max-width: 60%;
  overflow: hidden;
}

.author {
  color: #666;
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 320rpx;
  flex-shrink: 1;
}

.divider {
  margin: 0 6rpx;
  color: #ccc;
  flex-shrink: 0;
}

.create-time {
  font-size: 22rpx;
  color: #999;
  white-space: nowrap;
  flex-shrink: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 标题样式 */
.title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 摘要样式 */
.summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 统计信息样式 */
.stats {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.relevance {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.platform {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.platform text {
  margin-left: 6rpx;
}

.views {
  margin-right: 12rpx;
  display: flex;
  align-items: center;
}

.likes {
  display: flex;
  align-items: center;
}

.likes text {
  margin-left: 4rpx;
}

/* 空数据提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  text-align: center;
}

.empty-icon {
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 头部信息栏样式 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  width: 100%;
}

/* 来源信息样式 */
.source-info {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  max-width: 40%;
  overflow: hidden;
} 