/* 图片上传组件样式 */
.image-uploader {
  padding: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.image-item {
  position: relative;
  margin: 10rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 0 0 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.delete-btn image {
  width: 24rpx;
  height: 24rpx;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 10rpx;
  background-color: #f9f9f9;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  color: #999;
}

.upload-btn image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.upload-btn text {
  font-size: 24rpx;
}

.upload-progress {
  margin: 20rpx 0;
  padding: 10rpx;
}

.upload-progress progress {
  margin-bottom: 10rpx;
}

.upload-progress text {
  font-size: 24rpx;
  color: #666;
}

.error-tips {
  margin: 10rpx;
  padding: 16rpx;
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
  border-radius: 8rpx;
}

.error-tips text {
  font-size: 24rpx;
  color: #f5222d;
}

/* 图片预览样式 */
.image-preview {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #000;
  z-index: 9999;
  display: flex;
  flex-direction: column;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.8);
}

.preview-title {
  color: #fff;
  font-size: 32rpx;
}

.preview-close {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
}

.preview-swiper {
  flex: 1;
  width: 100%;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.preview-indicator {
  position: absolute;
  bottom: 160rpx;
  left: 0;
  right: 0;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 8rpx 0;
}

.preview-thumbnail {
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.8);
}

.thumbnail-scroll {
  white-space: nowrap;
  width: 100%;
}

.thumbnail-item {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  margin-right: 10rpx;
  border-radius: 6rpx;
  border: 2rpx solid transparent;
}

.thumbnail-item.active {
  border-color: #07C160;
}

.preview-action {
  display: flex;
  padding: 20rpx;
  background-color: rgba(0, 0, 0, 0.8);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 0 10rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.crop-btn {
  background-color: #fff;
  color: #333;
}

.confirm-btn {
  background-color: #07C160;
  color: #fff;
}

/* 上传成功图标 */
.upload-success-icon {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

/* 已上传图片 */
.image-item.uploaded {
  border: 2rpx solid #07C160;
} 