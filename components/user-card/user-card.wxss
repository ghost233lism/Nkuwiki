.user-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin: 30rpx 10rpx 0rpx 10rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  flex-shrink: 0;
  margin-right: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f6f6f6;
  border: 1px solid #f0f0f0;
}

.user-details {
  flex: 1;
  overflow: hidden;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-bio {
  font-size: 26rpx;
  color: #888;
  max-height: 72rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.user-action {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.edit-btn, .follow-btn {
  min-width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
}

.edit-btn {
  color: #666;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
}

.follow-btn {
  color: #fff;
  background-color: #1890ff;
}

.follow-btn.followed {
  color: #1890ff;
  background-color: #e6f7ff;
  border: 1rpx solid #1890ff;
}

.user-stats {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
  padding-bottom: 10rpx;
}

.stat-item {
  text-align: center;
  flex: 0 0 33.33%;
  padding: 12rpx 0;
  transition: background-color 0.2s;
  border-radius: 8rpx;
  position: relative;
  margin-bottom: 12rpx;
}

/* 为可点击的数据项添加点击状态 */
.stat-item:active {
  background-color: #f5f5f5;
}

/* 添加一个小指示器，提示可点击 */
.stat-item::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 50%;
  width: 16rpx;
  height: 4rpx;
  background-color: transparent;
  border-radius: 2rpx;
  transform: translateX(-50%);
  transition: background-color 0.2s;
}

.stat-item:active::after {
  background-color: #1890ff;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 占位符样式 */
.user-card-placeholder {
  min-height: 200rpx;
}

.user-info-placeholder {
  display: flex;
  align-items: center;
}

.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  margin-right: 20rpx;
}

.info-placeholder {
  flex: 1;
}

.name-placeholder {
  height: 36rpx;
  width: 200rpx;
  background-color: #f0f0f0;
  margin-bottom: 16rpx;
  border-radius: 4rpx;
}

.bio-placeholder {
  height: 26rpx;
  width: 300rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
}

.user-card-cell-status {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin: 20rpx 10rpx 0 10rpx;
} 