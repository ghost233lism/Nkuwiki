.login-card {
  width: 100%;
  min-height: 70vh;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 0 32rpx;
  box-sizing: border-box;
  animation: fadeIn 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.content {
  width: 100%;
  max-width: 720rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 40rpx;
  padding: 48rpx 40rpx;
  box-shadow: 
    0 16rpx 32rpx -8rpx rgba(0, 0, 0, 0.08),
    0 8rpx 16rpx -8rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
}

.content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.06), rgba(54, 207, 201, 0.06));
  z-index: 0;
}

/* 头部样式 */
.header {
  position: relative;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  z-index: 1;
}

.avatar {
  flex-shrink: 0;
  margin-right: 32rpx;
  background: linear-gradient(135deg, rgba(24, 144, 255, 0.15), rgba(54, 207, 201, 0.15));
  border-radius: 50%;
  padding: 24rpx;
  box-shadow: 
    0 8rpx 20rpx -4rpx rgba(24, 144, 255, 0.3),
    0 0 8rpx rgba(24, 144, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.text {
  flex: 1;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 1rpx;
}

/* 功能特性 */
.features {
  position: relative;
  z-index: 1;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
  margin-bottom: 48rpx;
  padding: 32rpx 0;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.3s ease;
}

.feature-item:active {
  transform: scale(0.92);
}

.feature-item icon {
  font-size: 52rpx;
  margin-bottom: 16rpx;
  color: #4080ff;
  opacity: 0.9;
}

.feature-item text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 按钮容器 - 新增 */
.button-container {
  display: flex;
  justify-content: center;
  width: 100%;
  margin: 30rpx 0;
}

/* 登录按钮样式 - 简化为原生样式 */
.login-button {
  margin: 0 !important;
  height: 88rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  font-size: 32rpx !important;
  font-weight: 500 !important;
  border-radius: 44rpx !important;
  min-width: 85% !important;
  padding: 0 40rpx !important;
  white-space: nowrap !important;
  /* 移除自定义阴影、边框和过渡效果 */
}

.login-button-icon {
  margin-right: 10rpx !important;
  vertical-align: middle !important;
  display: inline-block !important;
}

/* 优化文字间距 */
button.login-button {
  letter-spacing: 1rpx !important;
  line-height: 1 !important;
}

/* 协议提示 */
.agreement {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  letter-spacing: 0.5rpx;
}

.link {
  color: #4080ff;
  display: inline;
  margin: 0 4rpx;
  position: relative;
  font-weight: 500;
}

.link:active {
  opacity: 0.8;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
} 