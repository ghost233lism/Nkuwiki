.form-panel {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 表单项样式 */
.form-panel input-field,
.form-panel picker-field {
  position: relative;
  margin-bottom: 24rpx;
  display: block;
}

/* 标签样式 */
.form-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
  font-weight: normal;
}

.form-field {
  padding-top: 8rpx;
}

/* 字段分组 */
.field-group {
  margin-bottom: 40rpx;
  background: transparent;
}

.group-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin: 20rpx 0;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 输入框样式 */
.weui-input {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.weui-textarea {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  min-height: 100rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.weui-input__placeholder,
.weui-textarea__placeholder {
  color: #bbb;
  font-size: 32rpx;
}


/* 分组样式 */
.form-group {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group-title {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 30rpx;
  background: #f7f8fa;
}

/* 移除连接的边框样式 */
.weui-cell {
  padding: 24rpx 30rpx;
  border-bottom: none;  /* 移除底部边框 */
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.weui-cell:last-child {
  margin-bottom: 0;
}

.panel-header {
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.panel-header .title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.panel-header .subtitle {
  font-size: 28rpx;
  color: #999;
}

.panel-content {
  padding: 24rpx 40rpx;
  min-height: 200rpx;
}

.panel-footer {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid #eee;
}


/* 确保表单项有足够高度 */
.form-item {
  display: block;
  margin-bottom: 24rpx;
}

/* 支持占位符显示 */
.placeholder {
  color: #999;
}

/* 表单项容器 */
.form-events-wrapper {
  padding: 10rpx 0;
}

/* 面板间距优化 */
.form-panel.weui-panel {
  margin: 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
}

/* 表单项间距调整 */
.form-panel .weui-cells_form {
  --weui-cell-vertical-padding: 28rpx;
  --weui-cell-horizontal-padding: 32rpx;
}

/* 动态字段模板样式 */
.form-panel template[is="form-field"] {
  position: relative;
}

/* 最后一项底部间距 */
.form-panel .weui-cells_form > block:last-child::after {
  border-bottom: none !important;
}

/* 自定义插槽样式 */
.form-panel .custom-slot {
  padding: 24rpx 32rpx;
  background: var(--weui-BG-1);
}

/* 修改前（错误写法） */
.cache-button {
  padding: 16rpx 32rpx;
  background: #fff2f0;
  border-radius: 8rpx;
}

.cache-button .button-text {
  color: #ff4d4f;
  font-size: 28rpx;
}

.field-list {
  margin-bottom: 30rpx;
}

.field-item {
  margin-bottom: 20rpx;
}


/* 最后一个field-list不需要底部间距 */
.field-list:last-child {
  margin-bottom: 0;
}

/* 按钮居中容器 */
.button-wrapper {
  display: flex;
  justify-content: center;
  padding: 30rpx 0 40rpx;
}

/* 提交按钮样式 */
.submit-button {
  width: 85% !important;
  height: 88rpx !important;
  font-size: 34rpx !important;
  font-weight: 500 !important;
  border-radius: 44rpx !important;
  background-color: #07c160 !important;
  color: #fff !important;
  line-height: 88rpx !important;
  box-sizing: border-box !important;
  box-shadow: 0 6rpx 16rpx rgba(7, 193, 96, 0.25) !important;
  border: none !important;
  margin: 0 !important;
  padding: 0 !important;
  letter-spacing: 2rpx !important;
}

/* 提交按钮悬停态 */
.submit-button.button-hover {
  background-color: #06ad56 !important;
  opacity: 0.9 !important;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2) !important;
} 