.post-item {
  background: #fff;
  margin-bottom: 16rpx;
  padding: 14rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
  position: relative;
}

/* 点击跳转覆盖层 */
.tap-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

/* 互动元素的z-index需要高于覆盖层 */
.author-avatar,
.avatar-container,
.avatar-icon,
.author-name,
.follow-button,
.tag-item,
.action-button,
.read-more-wrapper,
.post-image,
.view-more {
  position: relative;
  z-index: 2;
}

/* 头部样式 */
.post-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0rpx;
}

.post-header-left {
  display: flex;
  align-items: center;
  flex: 1;
  max-width: 75%;
}

.header-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  justify-content: flex-start;
}

/* 新的头像容器样式 */
.avatar-container {
  width: 80rpx;
  height: 80rpx;
  margin-right: 16rpx;
  position: relative;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #f5f5f5;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 头像图标样式 */
.avatar-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.post-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.author-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.author-bio {
  font-size: 24rpx;
  color: #666;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 内容区域固定高度 */
.post-content-wrapper {
  min-height: 80rpx;
  max-height: 1000rpx;
  overflow: hidden;
  position: relative;
  margin: 0rpx 0;
}

/* 内容样式 */
.post-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 2rpx;
  color: #333;
  line-height: 1.3;
}

.post-content {
  position: relative;
  overflow: hidden;
}

/* 非详情页固定高度 */
.post-text {
  position: relative;
  overflow: hidden;
}

.post-body {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
}

.post-body.collapsed {
  max-height: 320rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 12;
  -webkit-box-orient: vertical;
  position: relative;
}

.post-body.collapsed::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 120rpx;
  background: linear-gradient(to bottom, rgba(255,255,255,0), rgba(255,255,255,1));
  pointer-events: none;
}

/* Markdown样式 */
.markdown-wrapper {
  font-size: 28rpx;
  line-height: 1.6;
  overflow: hidden;
  padding: 0 8rpx;
  margin-bottom: 8rpx;
}

.markdown-wrapper.collapsed {
  max-height: none;
  overflow: hidden;
  position: relative;
}

.markdown-wrapper.collapsed::after {
  display: none;
}

/* 展开按钮 */
.read-more-wrapper {
  width: 100%;
  text-align: center;
  margin-top: 6rpx;
  padding-top: 8rpx;
  position: relative;
  z-index: 2;
}

.read-more {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #07c160;
  padding: 4rpx 24rpx;
  background-color: #f7f7f7;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.expand-icon {
  margin-left: 6rpx;
  width: 20rpx;
  height: 20rpx;
  transition: transform 0.3s ease;
}

.rotate-down {
  transform: rotate(90deg);
}

.rotate-up {
  transform: rotate(-90deg);
}

/* 图片样式 */
.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
  position: relative;
}

.single-image .post-image {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

.double-image .post-image,
.multi-image .post-image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 底部样式 */
.post-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 8rpx 0;
  margin-top: 10rpx;
  border-top: 1rpx solid #f0f0f0;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  flex-grow: 1;
  max-width: 50%;
}

.action-buttons {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 240rpx;
}

.action-button {
  display: flex;
  align-items: center;
  padding: 0 2rpx;
  margin-left: 4rpx;
  background: none;
  border: none;
  min-height: 0;
  line-height: normal;
  font-size: 30rpx;
}

.action-button::after {
  border: none;
}

.action-button-active {
  color: #ff4400;
}

.action-count {
  font-size: 22rpx;
  color: #999;
  margin-left: 2rpx;
}

.share-button {
  background: none;
  border: none;
  padding: 0 2rpx;
  margin: 0 0 0 4rpx;
  display: flex;
  align-items: center;
  line-height: normal;
  font-size: unset;
  box-sizing: border-box;
  min-height: 0;
}

.share-button::after {
  border: none;
}

/* 标签样式 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin: 4rpx 0 2rpx 0;
}

.tag-item {
  background-color: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  line-height: 1.3;
  display: inline-flex;
  align-items: center;
}

/* 评论预览 */
.comment-preview {
  margin-top: 10rpx;
  padding: 10rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #f8f8fa;
  border-radius: 8rpx;
}

.comment-item {
  margin-bottom: 6rpx;
  font-size: 26rpx;
  line-height: 1.5;
}

.comment-author {
  color: #576b95;
  font-weight: 500;
}

.view-more {
  color: #576b95;
  font-size: 24rpx;
  margin-top: 8rpx;
  text-align: center;
}

/* 关注按钮容器 */
.follow-container {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: -20rpx;
}

/* 关注按钮 */
.follow-button {
  min-width: 60rpx;
  max-width: 120rpx;
  width: auto;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 26rpx;
  padding: 0 14rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: #e8f8ed;
  color: #07c160;
  border: none;
  box-sizing: border-box;
  margin: 0;
}

/* 覆盖按钮的默认样式 */
.follow-button::after {
  border: none;
}

/* 将button标签选择器改为类选择器 */
.follow-button.button {
  margin: 0;
  padding: 0 14rpx;
}

.follow-button.followed {
  background-color: #f2f2f2;
  color: #999;
}

.button-hover {
  opacity: 0.8;
}

/* 空内容提示 */
.empty-content-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  min-height: 60rpx;
}

.empty-content-text {
  font-size: 28rpx;
  color: #999;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}

