.comment-item {
  padding: 16rpx 20rpx;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

/* 头像容器样式，从post-item复制 */
.avatar-container {
  width: 64rpx;
  height: 64rpx;
  margin-right: 12rpx;
  position: relative;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #f5f5f5;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 头像图标样式，从post-item复制 */
.avatar-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.user-info {
  flex: 1;
  overflow: hidden;
}

.nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.content-area {
  margin-bottom: 12rpx;
}

.text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-word;
}

.image-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.content-image {
  width: 176rpx;
  height: 176rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
  border-radius: 6rpx;
  background-color: #f0f0f0;
}

/* 底部操作区样式，与post-item保持一致 */
.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 76rpx; /* 与内容左对齐 */
}

.time {
  font-size: 24rpx;
  color: #999;
  flex: 1;
}

.action-buttons {
  display: flex;
  align-items: center;
}

.action-icon {
  padding: 4rpx;
  margin-left: 30rpx;
  display: inline-flex;
  align-items: center;
}

.action-icon.liked {
  color: #ff6b6b;
}

/* 子评论样式 */
.replies {
  margin-top: 16rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 6rpx;
}

.replies .comment-item {
  padding: 10rpx;
  background-color: transparent;
  margin-bottom: 2rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.replies .comment-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
} 